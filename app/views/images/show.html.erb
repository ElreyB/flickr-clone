
<div class="thumbnail">
  <%= image_tag @image.photo %>
  <div class="caption">
    <p><%= @image.title%></p>
    <% if @image.tags.any? %>
      <% @image.tags.each do |tag| %>
        <p><span class="badge"> <%= tag.name %> </span></p>
      <% end %>
    <% end %>

    <button class="btn"> <%= link_to "Favorite", image_favorites_path(@image), method: 'create' %> </button>

  </div>
</div>

<%= render 'tags/form' %>
