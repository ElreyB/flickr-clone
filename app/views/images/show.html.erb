
<div class="thumbnail">
  <%= image_tag @image.photo %>
  <div class="caption">
    <p><%= @image.title%></p>
    <% if @image.tags.any? %>
      <% @image.tags.each do |tag| %>
        <p>
          <span class="badge"> <%= tag.name %> </span><%= link_to "Delete", image_tag_path(@image, tag),
                :data => {:confirm => "Are you sure?",
                  :method => 'delete'}%>
        </p>
      <% end %>
    <% end %>

    <button class="btn"> <%= link_to "Favorite", image_favorites_path(@image), method: 'create' %> </button>

  </div>
</div>

<%= render 'tags/form' %>
